@model IEnumerable<mucheroapp.Models.Fruit>;

@{
    ViewData["title"] = "Fruits-Dashboard";
}


<div class="bg-white">
    <div class="container mx-auto max-w-5xl py-28 px-8">
        <div class="pb-9">
            <a asp-controller="Admin" asp-action="Create" class="text-xl text-white bg-green-600 py-1 cursor-pointer px-6 transition ease-in-out duration-150 hover:bg-green-700">Create a new fruit</a>
        </div>
        <div class="">
            @if (Model.Count() >= 1)
            {
                <table class="table-fixed w-full border-2 border-black">
                    <thead class="border-2 border-black">
                        <tr>
                        <th class="px-4 py-2">Info</th>
                        <th class="px-4 py-2">Id</th>
                        <th class="px-4 py-2">Name</th>
                        <th class="px-4 py-2">Region</th>
                        <th class="px-4 py-2"></th>
                        <th class="px-4 py-2"></th>
                        </tr>
                    </thead>
                    @foreach (var fruit in Model)
                    {
                    <tbody>
                        <tr class="">
                        <td class="border px-4 py-2 text-center overflow-hidden">
                            <a asp-route-Id="@fruit.Id"  asp-controller="Admin" asp-action="Detail">0</a>
                        </td>
                        <td class="border px-4 py-2 text-center overflow-hidden">@fruit.Id</td>
                        <td class="border px-4 py-2 overflow-hidden">@fruit.Name</td>
                        <td class="border px-4 py-2 overflow-hidden overflow-hidden">@fruit.Region</td>
                        <td class="border px-4 py-2 overflow-hidden">
                            <a asp-controller="Admin" asp-route-Id="@fruit.Id" asp-action="Update">Update</a>
                        </td>
                        <td class="border px-4 py-2 cursor-pointer overflow-hidden">
                            <a asp-controller="Admin" asp-route-Id="@fruit.Id" asp-action="Delete">Delete</a>
                        </td>
                    </tbody>
                    }
                </table>
            }
            else 
            {
                <h1 class="text-4xl text-center text-red-600">The database is empty..</h1>
            }
        </div> 
    </div>
</div>