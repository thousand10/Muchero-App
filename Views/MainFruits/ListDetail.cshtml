@model mucheroapp.Models.Fruit;

@{

}


<div class="bg-white">
    <div class="container mx-auto max-w-3xl py-28 px-8">
        <div class="pb-10">
            <a asp-controller="MainFruits" asp-action="listFruits" class="font-serif underline text-2xl">Go back to List</a>
        </div>

        <div class="">
            <div class="pb-4 max-w-xl">
                <img src="/imgs/one.jpg" alt="" class="w-full">
            </div>
            <h1 class="font-sans text-black text-2xl md:text-3xl pb-3 underline">@Model.Name</h1>
            <h1 class="font-sans text-gray-400 text-lg pb-3">Other Names: <span class="text-gray-900">@Model.OtherNames</span></h1>
            <h1 class="font-sans text-gray-400 text-lg pb-3">Region: <span class="text-gray-900">@Model.Region</span></h1>
            <h1 class="font-sans text-gray-400 text-lg pb-3">Benefits: <span class="text-gray-900">@Model.Benefits</span></h1>
            <p class="font-sans text-gray-400 text-lg pb-1 ">About fruit: <span class="text-gray-900 ">@Model.MoreAboutFruit</span></p>
        </div>
    </div>
</div>