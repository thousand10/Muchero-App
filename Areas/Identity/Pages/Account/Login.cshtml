@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="bg-white">
    <div class="container mx-auto max-w-2xl py-28 px-8">
        <div class="flex flex-col justify-center items-center">
            <h1 class="font-serif text-4xl pb-5">Login Here!</h1>
            <h1 class="text-center flex flex-col text-xl pb-8">
                <span>Welcome Super</span>
                <span>Admin</span>
            </h1>

            <form id="account" method="post" class="pb-5">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="py-2">
                    <input asp-for="Input.Email" class="w-full py-2 px-5 outline-none border-2 border-black" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="py-2">
                    <input asp-for="Input.Password" class="w-full py-2 px-5 outline-none border-2 border-black" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <button id="login-submit" type="submit" class="w-full bg-black text-white text-xl py-2  ">Login</button>
            </form>
            
            <div class="">-----------------------------------------------</div>
            <h1>Or</h1>
            <div class="">-----------------------------------------------</div>
            <a asp-controller="Authenticate" asp-action="Signin" class="font-serif text-xl underline pb-5">Sign_Up</a>
            
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 





